<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.customer.repository.UserRepository">

    <select id="getCustomers" resultType="com.example.customer.vo.Customer">
        SELECT * FROM customer;
    </select>

    <select id="doLogin" resultType="com.example.customer.vo.Admin">
        SELECT * FROM admin
        WHERE name = #{name}
        AND passwd = #{passwd}
        LIMIT 1;
    </select>

</mapper>
